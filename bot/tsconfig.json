{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "skipLibCheck": true,
    "moduleResolution": "Node"
  },
  "include": [
    "./src/**/*"
  ]
}